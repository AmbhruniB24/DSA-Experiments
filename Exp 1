#include <stdio.h>
#define MAX 5

int main() {
    int stack[MAX], top=-1, ch, x;
    do {
        printf("\n1.Push 2.Pop 3.Display 4.Exit\nChoice: ");
        scanf("%d",&ch);

        if(ch==1) {
            if(top==MAX-1) printf("Overflow!\n");
            else {
                printf("Enter number: ");
                scanf("%d",&x);
                stack[++top]=x;
            }
        }
        else if(ch==2) {
            if(top==-1) printf("Underflow!\n");
            else printf("Popped: %d\n", stack[top--]);
        }
        else if(ch==3) {
            if(top==-1) printf("Empty\n");
            else {
                for(int i=top;i>=0;i--) printf("%d ",stack[i]);
                printf("\n");
            }
        }
    } while(ch!=4);
}
